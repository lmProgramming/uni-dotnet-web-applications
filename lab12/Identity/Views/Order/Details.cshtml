@model Identity.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalCost)
        </dd>
    </dl>
    <h4>Order Items</h4>
    <hr />
    @foreach (var item in Model.OrderItems)
    {
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => item.Article.Name)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => item.Article.Name)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => item.Article.Price)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => item.Article.Price)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => item.Quantity)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => item.Quantity)
            </div>
        </div>
        <hr />
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>