@page
@model WebApp9_RazorPagesStudent.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Student.Index" class="control-label"></label>
                <input asp-for="Student.Index" class="form-control" />
                <span asp-validation-for="Student.Index" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Student.Gender" class="control-label"></label>
                <select asp-for="Student.Gender" class="custom-select" asp-items="Html.GetEnumSelectList<Gender>()">
                </select>
                <span asp-validation-for="Student.Gender" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Student.Active" /> @Html.DisplayNameFor(model => model.Student.Active)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="Student.DepartmentId" class="control-label"></label>
                <input asp-for="Student.DepartmentId" class="form-control" />
                <span asp-validation-for="Student.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Student.BirthDate" class="control-label"></label>
                <input asp-for="Student.BirthDate" class="form-control" />
                <span asp-validation-for="Student.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
